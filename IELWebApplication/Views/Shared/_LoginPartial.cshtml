@using System.Security.Principal

<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <span class="navbar-text text-white">Bem vindo, <br> <b>@User.Identity.Name</b></span>
        <br>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Home" asp-action="Sair">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white"  asp-controller="Home" asp-action="Index">Entrar</a>
        </li>
    }
</ul>

