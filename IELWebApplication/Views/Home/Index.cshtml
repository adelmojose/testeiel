@model IELCadastroEstudante.ViewModel.UsuarioViewModel

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery.inputmask/jquery.inputmask.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">



@using(Html.BeginForm("Login", "Home", FormMethod.Post, new { autocomplete="off" })){

    <div class="align-content-lg-center justify-content-center"> 

    <div class="row">
         <div class="col-lg-6">
            <div class="form-group">
                    <label for="Usuario" class="form-label"><b>Usuário</b></label>
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="Usuario" class="form-label"><b>Senha</b></label>
                    @Html.TextBoxFor(m => m.Senha, new { @class = "form-control", @type = "password" })
                </div>
            </div>
        </div>

    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Erro))
    {
        <h6 style="color:red;font-weight:600;">
            @ViewBag.Erro.ToString()
        </h6>
    }
    <button type="submit" class="btn btn-lg btn-outline-primary" value="btnLiberar" >Enviar</button>
    




}